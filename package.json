{
  "name": "electron-secure-defaults",
  "version": "1.0.0",
  "description": "A starter kit for security conscious Electron apps",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js",
    "electronegativity": "electronegativity -i ./dist"
  },
  "repository": "https://github.com/1password/electron-secure-defaults",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript",
    "secure"
  ],
  "author": "1Password",
  "contributors": [
    "GitHub",
    "Mitchell Cohen (github.com/mitchchn)"
  ],
  "license": "MIT",
  "build": {
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": "tar.gz"
    }
  },
  "devDependencies": {
    "@doyensec/electronegativity": "^1.9.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "electron": "^13.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^7.3.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "commander": "^7.2.0"
  }
}
